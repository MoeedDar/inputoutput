{
  "$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
  "formatter": {
    "indentWidth": 2,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "style": {
        "useImportType": {
          "level": "on",
          "options": {
            "style": "separatedType"
          }
        }
      }
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [
              { "type": false, "source": ":NODE:" },
              { "type": false, "source": "react" },
              { "type": false, "source": "react-dom" },
              { "type": false, "source": "@tanstack/**" },
              { "type": false, "source": ":PACKAGE:" },
              ":BLANK_LINE:",
              { "type": false, "source": "@/**" },
              { "type": false, "source": "./**" },
              ":BLANK_LINE:",
              { "type": true },
              ":BLANK_LINE:",
              "*.css"
            ]
          }
        }
      }
    }
  }
}
